<div class="container">
<h2 style="margin-top:7rem">Forgot your password?</h2>

<div style="margin-bottom:22rem">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control mb-3" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions",class:"btn btn-success mt-3 mb-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>