<div class="container">
<% if resource.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% resource.errors.full_messages.each do |message| %>
         <li class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= message %>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
       </li>
        
      <% end %>
    </ul>
  </div>
<% end %>


</div>